{
  "name": "wordpress-conditional-editor-plugin",
  "version": "0.1.0",
  "author": "Daniel M. Hendricks",
  "license": "GPL-2.0-or-later",
  "config": {
    "slug": "conditional-editor"
  },
  "scripts": {
    "translate": "wp-pot -s 'app/**/*.php' -o ./languages/$npm_package_name.pot -p $npm_package_config_slug",
    "zip": "zip -q -r ../$npm_package_config_slug-$npm_package_version.zip * -x 'node_modules/*' '.git*' './src/*' './.*' './package*.*' './composer.*' './*.md' './*.bak' './bower.json' './gulpfile.js' './README.md' ",
    "zip-dev": "zip -q -r ../$npm_package_config_slug-$npm_package_version-dev.zip * -x 'node_modules/*' '.git*' '.DS_Store' './*.bak' "
  },
  "devDependencies": {
    "wp-pot-cli": "^1.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/dmhendricks/wordpress-conditional-editor-plugin.git"
  }
}
